@{
}


@model List<ComplexExample.Models.Course>


<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title></title>
</head>

@*<span class=""></span>*@
<h3 class="text-secondary float-start"> Courses </h3>
<hr class="my-4" />
@*<p class="display-6 text-danger">@ViewBag.error </p>*@
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Course Id</th>
            <th scope="col">Credits</th>
            <th scope="col">Department Id</th>
            <th scope="col">Title</th>
            <th colspan="2" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {

            <tr>
                <th scope="row">@course.CourseId</th>
                <td>@course.Credits</td>
                <td>@course.DepartmentId</td>
                <td>@course.Title</td>
                <td>@Html.ActionLink("Update", "UpdateStudent", "Admin", new { id = course.CourseId }) . @Html.ActionLink("Delete", "DeleteStudent", "Admin", new { id = course.CourseId })</td>

            </tr>


        }

    </tbody>
</table>
<br />