</head>

@*<span class=""></span>*@
<h3 class="text-secondary float-start"> Courses </h3>
<hr class="my-4" />
@*<p class="display-6 text-danger">@ViewBag.error </p>*@
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Department Id</th>
            <th scope="col"> Name </th>
            <th scope="col">Instructor Id</th>
            <th scope="col">Start Date</th>
            <th scope="col">Budget</th>
            <th colspan="2" scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {

        <tr>
            <th scope="row">@dept.DepartmentId</th>
            <td>@dept.Name</td>
            <td>@dept.InstructorId</td>
            <td>@dept.StartDate</td>
            <td>@dept.Budjet</td>
            <td>@Html.ActionLink("Update", "UpdateStudent", "Admin", new { id = dept.DepartmentId}) . @Html.ActionLink("Delete", "DeleteStudent", "Admin", new { id = dept.DepartmentId})</td>

        </tr>


        }

    </tbody>
</table>
